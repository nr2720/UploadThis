<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>File Uploader</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <div class="container">
    <div class="content">

      <header>
        <h1>Bienvenue chez UploadMe</h1>
      </header>



 
      <section class="auth-section">
        <% if (error.length > 0) { %>
          <div class="error"><%= error[0] %></div>
        <% } %>
        <br>
        <h2>Connecte toi ou cr√©e un compte gratuitement</h2>
        <div class="auth-tabs">
          <button class="auth-btn" id="login-btn">Se connecter</button>
          <button class="auth-btn" id="signup-btn">Creer un compte</button>
        </div>

   
        <div id="login-form" class="auth-form">
          <form action="/user/log-in" method="POST">
            <input type="text" name="username" placeholder="Username" required>
            <input type="password" name="password" placeholder="Password" required>
            <button type="submit">Se connecter</button>
          </form>
        </div>

    
        <div id="signup-form" class="auth-form" style="display:none;">
          <form action="/user/sign-up" method="POST">
            <input type="text" name="username" placeholder="Username" required>
            <input type="text" name="name" placeholder="Name" required>
            <input type="text" name="lastname" placeholder="Last name" required>
            <input type="password" name="password" placeholder="Password" required>
            <input type="email" name="email" placeholder="Email" required>
            <input type="text" name="country" placeholder="Country" required>
            <button type="submit">Creer un compte</button>
          </form>
        </div>
      </section>
    </div>
  </div>

  <script>
    document.getElementById('login-btn').addEventListener('click', function() {
      document.getElementById('login-form').style.display = 'flex';
      document.getElementById('signup-form').style.display = 'none';
    });
    document.getElementById('signup-btn').addEventListener('click', function() {
      document.getElementById('login-form').style.display = 'none';
      document.getElementById('signup-form').style.display = 'flex';
    });
  </script>
</body>
</html>
